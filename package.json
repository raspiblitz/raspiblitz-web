{
  "name": "raspiblitz-web",
  "version": "1.0.0",
  "license": "MIT",
  "author": {
    "name": "Christoph Stenglein",
    "email": "christoph@cstenglein.com",
    "url": "https://cstenglein.com/"
  },
  "scripts": {
    "postinstall": "husky install",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "coverage": "react-scripts test --coverage --watchAll"
  },
  "config": {
    "port": "3000"
  },
  "lint-staged": {
    "{src,backend-mock}/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "^test-utils$": "<rootDir>/src/utils/test-utils.tsx"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@bitcoin-design/bitcoin-icons-react": "^0.1.9",
    "@heroicons/react": "^1.0.6",
    "axios": "^0.27.2",
    "event-source-polyfill": "1.0.25",
    "http-proxy-middleware": "^2.0.6",
    "i18next": "^21.9.1",
    "qrcode.react": "^3.1.0",
    "rc-tooltip": "^5.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.35.0",
    "react-i18next": "^11.18.6",
    "react-router-dom": "^6.4.0",
    "react-toastify": "^9.0.8"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.17.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/event-source-polyfill": "^1.0.0",
    "@types/jest": "^28.1.8",
    "@types/node": "^16.11.56",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "^10.4.8",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "msw": "^0.47.3",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.1.8",
    "typescript": "~4.8.3"
  },
  "packageManager": "yarn@3.2.2"
}
